---
// Config
import { SITE } from '../config';

// Layout
import Layout from '../layouts/Layout.astro';

// Component
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import SectionTitle from '../components/SectionTitle.astro';
import Works from '../components/Works.astro';
import Skills from '../components/Skills.astro';
---

<Layout title={SITE.title} description={SITE.description}>
  <main class="l-site__main">
    <!-- Hero -->
    <Hero />

    <!-- About -->
    <section class="section -about">
      <SectionTitle text="About" />
      <About />
    </section>

    <!-- Works -->
    <section class="section">
      <SectionTitle text="Works" className="-reverse" />
      <Works />
    </section>

    <!-- Skills -->
    <section class="section">
      <SectionTitle text="Skills" />
      <Skills />
    </section>

    <!-- Contact -->
    <div class="section -contact">
      <p class="u-text-center" lang="en">
        <a class="contactLink" href="mailto:sakucode1993@gmail.com">
          <span class="contactLink__text" data-animated="slideIn Up">Contact Me</span>
          <svg aria-hidden="true" class="contactLink__icon">
            <use href="#send"></use>
          </svg>
        </a>
      </p>
    </div>
  </main>
</Layout>

<style lang="scss">
  @use '../assets/scss/global' as *;

  .section {
    padding-top: fluid(100, 164, var(--sp-comp-width), var(--pc-comp-width));

    &.-about {
      padding-top: fluid(100, 164, var(--sp-comp-width), var(--pc-comp-width));
    }

    &.-contact {
      padding-top: fluid(100, 164, var(--sp-comp-width), var(--pc-comp-width));
      padding-bottom: fluid(120, 192, var(--sp-comp-width), var(--pc-comp-width));
    }
  }

  .contactLink {
    display: inline-flex;
    position: relative;
    align-items: flex-end;
    padding-inline: 1rem;
    overflow: hidden;
    column-gap: 0.5rem;
    transition-property: transfrom, padding;
    transition-duration: 0.3s;
    transition-timing-function: var(--easing);
    font-size: fluid(48, 88, var(--sp-comp-width), var(--pc-comp-width));
    line-height: 1;

    @include mq(md) {
      padding-inline: 1.5rem 0.5rem;
    }

    &::after {
      content: '';
      display: block;
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 2px;
      transform-origin: right bottom;
      transition: transform 0.3s var(--easing);
      background-color: currentcolor;
    }

    @include hover {
      padding-right: 1.4em;

      &::after {
        transform: scaleX(0);
      }

      .contactLink__icon {
        visibility: visible;
        transform: translateY(-50%) scale(1);
      }
    }
  }

  .contactLink__text {
    transition: transform 0.3s ease-in-out;
  }

  .contactLink__icon {
    --size: 1.1em;

    visibility: hidden;
    position: absolute;
    top: 50%;
    right: 0;
    width: var(--size);
    height: var(--size);
    transform: translateY(-50%) scale(0);
    transition: transform 0.3s ease-in-out;
    fill: currentcolor;
  }
</style>

<style lang="scss" is:global>
  [data-animated] {
    --duration: 0.5s;
    --delay: 0s;

    transition-duration: var(--duration);
    transition-timing-function: var(--easing);
    transition-delay: var(--delay);
  }

  // slideIn
  [data-animated~='slideIn'] {
    transform: translateY(100%);
    transition-property: transfrom, opacity;
    opacity: 0;

    &.is-animated {
      transform: translateY(0);
      opacity: 1;
    }
  }

  // fadeIn
  [data-animated~='fadeIn'],
  [data-animated~='fadeInUp'] {
    transition-property: opacity;
    opacity: 0;

    &.is-animated {
      opacity: 1;
    }

    // fadeInUp
    &[data-animated~='fadeInUp'] {
      transform: translateY(10px);
      transition-property: transfrom;

      &.is-animated {
        transform: translateY(0);
      }
    }
  }

  // blur
  [data-animated~='blurIn'],
  [data-animated~='blurInUp'] {
    transition-property: opacity, filter;
    opacity: 0;
    filter: blur(10px);

    &.is-animated {
      opacity: 1;
      filter: blur(0);
    }

    &[data-animated~='blurInUp'] {
      transform: translateY(10px);

      &.is-animated {
        transform: translateY(0);
      }
    }
  }
</style>

<script>
  import { SetObserver } from '../assets/js/setObserver';

  /**
   * data-animated属性がつけられた要素を監視
   * @param entries - 監視対象要素
   */
  const animationObserve = (entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-animated');
      }
    });
  };

  new SetObserver('[data-animated]', animationObserve, { rootMargin: '0px 0px -20% 0px', thredshold: 0.5 });
</script>
